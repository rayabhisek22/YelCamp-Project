<% include ../partials/header %>
<div class="container">
<div class="row">
  <div class="col-md-3">
    <p class="lead">YelCamp</p>
    <div class="list-group">
      <a href="#"><li class="list-group-item active">Info 1</li></a>
      <a href="#"><li class="list-group-item">Info 2</li></a>
      <a href="#"><li class="list-group-item">Info 3</li></a>
    </div>
  </div>
  <div class="col-md-9">
    <div class="thumbnail border">
      <img src="<%=campground.img%>" alt="<%=campground.name%>">
      <div style="padding:10px;">
        <h4 class="float-right">$9.00/night</h4>
        <h4><a href="#"><%=campground.name%></a></h4>
        <p><%=campground.description%></p>
      </div>
    </div>
    <div class="card card-body bg-light" >
      <div class="row" style="padding:10px;">
        <div class="col">
          <a class="btn btn-success float-right" href="/campground/<%=campground._id%>/comments/new">Leave a review</a>
        </div>
      </div>
      <hr>
      <%campground.comments.forEach(function(comment){%>
        <div class="row">
          <div class="col-md-12">
            <strong><%=comment.name%></strong>
            <span class="float-right"> 10 days ago </span>
            <p><%=comment.body%></p>
          </div>
        </div>
      <%})%>
    </div>
  </div>
</div>
</div>







<% include ../partials/footer %>
